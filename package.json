{
  "name": "poll.io",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "install": "(cd client && yarn) && (cd server && yarn)",
    "start": "concurrently \"cd client && yarn start\" \"yarn start-server\"",
    "dev": "concurrently \"cd client && yarn start\" \"yarn dev-server\"",
    "start-server": "PORT=3001 node ./bin/www",
    "dev-server": "PORT=3001 nodemon ./bin/www"
  },
  "dependencies": {
    "@firebase/app-types": "^0.1.0",
    "body-parser": "~1.18.2",
    "concurrently": "^3.5.1",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "firebase-admin": "^5.9.1",
    "jade": "~1.11.0",
    "morgan": "~1.9.0",
    "pusher": "^1.5.1",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "esformatter": "^0.10.0",
    "esformatter-jsx": "^8.0.1",
    "eslint": "^4.18.2",
    "eslint-plugin-react": "^7.7.0",
    "nodemon": "^1.17.1"
  }
}
